{
	"$schema": "https://raw.githubusercontent.com/infinum/eightshift-frontend-libs/develop/schemas/component.json",
	"componentName": "lists",
	"title": "Lists",
	"componentClass": "lists",
	"example": {
		"attributes": {
			"listsContent": "<li>List Item 1</li><li>List Item 2</li><li>List Item 3</li>",
			"listsOrdered": "ul",
			"listsSize": "default",
			"listsColor": "primary",
			"listsUse": true
		}
	},
	"attributes": {
		"listsContent": {
			"type": "string"
		},
		"listsOrdered": {
			"type": "string",
			"default": "ul"
		},
		"listsSize": {
			"type": "string",
			"default": "default"
		},
		"listsColor": {
			"type": "string",
			"default": "primary"
		},
		"listsColorOnlyMarker": {
			"type": "boolean",
			"default": false
		},
		"listsUse": {
			"type": "boolean",
			"default": true
		}
	},
	"options": {
		"listsOrdered": [
			{
				"label": "Ordered",
				"value": "ol",
				"icon": "listOrdered"
			},
			{
				"label": "Bulleted",
				"value": "ul",
				"icon": "listUnordered"
			}
		],
		"listsSize": [
			{
				"label": "Default (16)",
				"value": "default"
			},
			{
				"label": "Small (13)",
				"value": "small"
			},
			{
				"label": "Big (32)",
				"value": "big"
			}
		],
		"listsColor": [
			"primary",
			"black",
			"white",
			"green",
			"ocean",
			"yellow",
			"blue",
			"red",
			"cream",
			"mist",
			"dew",
			"eightshift"
		]
	},
	"variables": {
		"listsSize": {
			"default": [
				{
					"variable": {
						"lists-font-size": "0.8rem",
						"lists-line-height": "1.5"
					}
				},
				{
					"breakpoint": "tablet",
					"variable": {
						"lists-font-size": "1rem"
					}
				}
			],
			"small": [
				{
					"variable": {
						"lists-font-size": "0.6rem",
						"lists-line-height": "1.3"
					}
				},
				{
					"breakpoint": "tablet",
					"variable": {
						"lists-font-size": "0.8rem"
					}
				}
			],
			"big": [
				{
					"variable": {
						"lists-font-size": "1.6rem",
						"lists-line-height": "1.4"
					}
				},
				{
					"breakpoint": "tablet",
					"variable": {
						"lists-font-size": "2rem"
					}
				}
			]
		},
		"listsColor": {
			"primary": [
				{
					"variable": {
						"lists-color": "var(--global-colors-primary)",
						"lists-link-color": "var(--global-colors-black)",
						"lists-link-color-hover": "var(--global-colors-blue)"
					}
				}
			],
			"black": [
				{
					"variable": {
						"lists-color": "var(--global-colors-black)",
						"lists-link-color": "var(--global-colors-primary)",
						"lists-link-color-hover": "var(--global-colors-blue)"
					}
				}
			],
			"green": [
				{
					"variable": {
						"lists-color": "var(--global-colors-green)",
						"lists-link-color": "var(--global-colors-white)",
						"lists-link-color-hover": "var(--global-colors-ocean)"
					}
				}
			],
			"ocean": [
				{
					"variable": {
						"lists-color": "var(--global-colors-ocean)",
						"lists-link-color": "var(--global-colors-white)",
						"lists-link-color-hover": "var(--global-colors-green)"
					}
				}
			],
			"yellow": [
				{
					"variable": {
						"lists-color": "var(--global-colors-yellow)",
						"lists-link-color": "var(--global-colors-white)",
						"lists-link-color-hover": "var(--global-colors-ocean)"
					}
				}
			],
			"blue": [
				{
					"variable": {
						"lists-color": "var(--global-colors-blue)",
						"lists-link-color": "var(--global-colors-black)",
						"lists-link-color-hover": "var(--global-colors-primary)"
					}
				}
			],
			"red": [
				{
					"variable": {
						"lists-color": "var(--global-colors-red)",
						"lists-link-color": "var(--global-colors-black)",
						"lists-link-color-hover": "var(--global-colors-blue)"
					}
				}
			],
			"cream": [
				{
					"variable": {
						"lists-color": "var(--global-colors-cream)",
						"lists-link-color": "var(--global-colors-yellow)",
						"lists-link-color-hover": "var(--global-colors-ocean)"
					}
				}
			],
			"white": [
				{
					"variable": {
						"lists-color": "var(--global-colors-white)",
						"lists-link-color": "var(--global-colors-yellow)",
						"lists-link-color-hover": "var(--global-colors-ocean)"
					}
				}
			],
			"eightshift": [
				{
					"variable": {
						"lists-color": "var(--global-colors-eightshift)",
						"lists-link-color": "var(--global-colors-blue)",
						"lists-link-color-hover": "var(--global-colors-primary)"
					}
				}
			],
			"dew": [
				{
					"variable": {
						"lists-color": "var(--global-colors-dew)",
						"lists-link-color": "var(--global-colors-ocean)",
						"lists-link-color-hover": "var(--global-colors-white)"
					}
				}
			],
			"mist": [
				{
					"variable": {
						"lists-color": "var(--global-colors-mist)",
						"lists-link-color": "var(--global-colors-ocean)",
						"lists-link-color-hover": "var(--global-colors-green)"
					}
				}
			]
		},
		"listsColorOnlyMarker": {
			"false": [
				{
					"variable": {
						"lists-marker-color": "var(--lists-color)",
						"lists-text-color": "var(--lists-color)"
					}
				}
			],
			"true": [
				{
					"variable": {
						"lists-marker-color": "var(--lists-color)",
						"lists-text-color": "currentColor",
						"lists-link-color": "var(--lists-color)"
					}
				}
			]
		}
	}
}
