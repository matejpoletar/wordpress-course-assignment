{
	"$schema": "https://raw.githubusercontent.com/infinum/eightshift-frontend-libs/develop/schemas/component.json",
	"componentName": "card-overlay",
	"title": "Card Overlay",
	"componentClass": "card-overlay",
	"description" : "Card Overlay Description",
	"example": {
		"attributes": {
			"cardOverlayAlign": "left",
			"cardOverlayUrl": "https://infinum-academy.test/",
			"cardOverlayPosition": "top"
		}
	},
	"components": {
		"heading": "heading",
		"paragraph": "paragraph",
		"image": "image"
	},
	"attributes": {
		"cardOverlayAlign": {
			"type": "string",
			"default": "left"
		},
		"cardOverlayUrl": {
			"type": "string"
		},
		"cardOverlayPosition": {
			"type": "string",
			"default": "top"
		}
	},
	"options": {
		"cardOverlayAlign": [
			"left",
			"center",
			"right"
		],
		"cardOverlayPosition": [
			"top",
			"bottom"
		]
	},
	"variables": {
		"cardOverlayAlign": [
			{
				"variable": {
					"block-card-align": "%value%"
				}
			}
		],
		"cardOverlayPosition": {
			"top": [
				{
					"variable": {
						"card-overlay-top": "0",
						"card-overlay-bottom": "auto"
					}
				}
			],
			"bottom": [
				{
					"variable": {
						"card-overlay-top": "auto",
						"card-overlay-bottom": "0"
					}
				}
			]
		}
	}
}
