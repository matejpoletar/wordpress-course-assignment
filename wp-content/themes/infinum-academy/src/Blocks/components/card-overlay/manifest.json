{
	"$schema": "https://raw.githubusercontent.com/infinum/eightshift-frontend-libs/develop/schemas/component.json",
	"componentName": "card-overlay",
	"title": "Card Overlay",
	"componentClass": "card-overlay",
	"description" : "Card Overlay Description",
	"example": {
		"attributes": {
			"cardAlign": "left"
		}
	},
	"components": {
		"heading": "heading",
		"paragraph": "paragraph",
		"image": "image"
	},
	"attributes": {
		"cardAlign": {
			"type": "string",
			"default": "left"
		},
		"innerContainerClass": {
			"type": "string",
			"default": "card-overlay-container"
		}
	},
	"options": {
		"cardAlign": [
			"left",
			"center",
			"right"
		]
	},
	"variables": {
		"cardAlign": [
			{
				"variable": {
					"block-card-align": "%value%"
				}
			}
		]
	}
}
