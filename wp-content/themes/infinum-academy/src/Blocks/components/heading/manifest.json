{
	"$schema": "https://raw.githubusercontent.com/infinum/eightshift-frontend-libs/develop/schemas/component.json",
	"componentName": "heading",
	"title": "Heading",
	"componentClass": "heading",
	"example": {
		"attributes": {
			"headingContent": "This is heading",
			"headingLevel": 2,
			"headingSize": "regular",
			"headingWeight": "normal",
			"headingColor": "black",
			"headingUse": true
		}
	},
	"attributes": {
		"headingContent": {
			"type": "string"
		},
		"headingLevel": {
			"type": "integer",
			"default": 2
		},
		"headingSize": {
			"type": "string",
			"default": "regular"
		},
		"headingWeight": {
			"type": "string",
			"default": "normal"
		},
		"headingColor": {
			"type": "string",
			"default": "black"
		},
		"headingUse": {
			"type": "boolean",
			"default": true
		}
	},
	"options": {
		"headingSize": [
			{
				"label": "Tiny (14)",
				"value": "tiny"
			},
			{
				"label": "Small (18)",
				"value": "small"
			},
			{
				"label": "Regular (24)",
				"value": "regular"
			},
			{
				"label": "Big (40)",
				"value": "big"
			},
			{
				"label": "Bigger (52)",
				"value": "bigger"
			},
			{
				"label": "Huge (68)",
				"value": "huge"
			}
		],
		"headingColor": [
			"primary",
			"black",
			"white",
			"green",
			"ocean",
			"yellow",
			"blue",
			"red",
			"cream",
			"mist",
			"dew",
			"eightshift"
		],
		"headingWeight": [
			{
				"label": "Normal",
				"value": "normal" 
			},
			{
				"label": "Bold",
				"value": "bold" 
			}
		]
	},
	"variables": {
		"headingSize": {
			"tiny": [
				{
					"variable": {
						"heading-font-size": "0.75rem",
						"heading-line-height": "1"
					}
				},
				{
					"breakpoint": "tablet",
					"variable": {
						"heading-font-size": "0.875rem"
					}
				}
			],
			"small": [
				{
					"variable": {
						"heading-font-size": "0.9rem",
						"heading-line-height": "1"
					}
				},
				{
					"breakpoint": "tablet",
					"variable": {
						"heading-font-size": "1.125rem"
					}
				}
			],
			"regular": [
				{
					"variable": {
						"heading-font-size": "1rem",
						"heading-line-height": "1"
					}
				},
				{
					"breakpoint": "tablet",
					"variable": {
						"heading-font-size": "1.5rem"
					}
				}
			],
			"big": [
				{
					"variable": {
						"heading-font-size": "1.1rem",
						"heading-line-height": "1"
					}
				},
				{
					"breakpoint": "tablet",
					"variable": {
						"heading-font-size": "2.5rem"
					}
				}
			],
			"bigger": [
				{
					"variable": {
						"heading-font-size": "1.25rem",
						"heading-line-height": "1"
					}
				},
				{
					"breakpoint": "tablet",
					"variable": {
						"heading-font-size": "3.25rem"
					}
				}
			],
			"huge": [
				{
					"variable": {
						"heading-font-size": "1.5rem",
						"heading-line-height": "1"
					}
				},
				{
					"breakpoint": "tablet",
					"variable": {
						"heading-font-size": "4.25rem"
					}
				}
			]
		},
		"headingWeight": {
			"normal": [
				{
					"variable": {
						"heading-font-weight": "normal"
					}
				}
			],
			"bold": [
				{
					"variable": {
						"heading-font-weight": "bold"
					}
				}
			]
		},
		"headingColor": [
			{
				"variable": {
					"heading-color": "var(--global-colors-%value%)"
				}
			}
		]
	}
}
