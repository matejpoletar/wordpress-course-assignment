{
	"$schema": "https://raw.githubusercontent.com/infinum/eightshift-frontend-libs/develop/schemas/component.json",
	"componentName": "paragraph",
	"title": "Paragraph",
	"componentClass": "paragraph",
	"example": {
		"attributes": {
			"paragraphContent": "This is paragraph",
			"paragraphSize": "regular",
			"paragraphWeight": "normal",
			"paragraphColor": "black",
			"paragraphFont": "Montserrat",
			"paragraphUse": true
		}
	},
	"attributes": {
		"paragraphContent": {
			"type": "string"
		},
		"paragraphSize": {
			"type": "string",
			"default": "regular"
		},
		"paragraphColor": {
			"type": "string",
			"default": "black"
		},
		"paragraphFont": {
			"type": "string",
			"default": "Montserrat"
		},
		"paragraphUse": {
			"type": "boolean",
			"default": true
		},
		"paragraphWeight": {
			"type": "string",
			"default": "normal"
		}
	},
	"options": {
		"paragraphSize": [
			{
				"label": "Regular (14)",
				"value": "regular"
			},
			{
				"label": "Small (11)",
				"value": "small"
			}
		],
		"paragraphColor": [
			"primary",
			"white",
			"grey",
			"illusion",
			"minsk",
			"seance"
		],
		"paragraphWeight": [
			{
				"label": "Normal",
				"value": "normal" 
			},
			{
				"label": "Bold",
				"value": "bold" 
			}
		],
		"paragraphFont": [
			{
				"label": "Montserrat",
				"value": "montserrat"
			},
			{
				"label": "Source Sans Pro",
				"value": "source_sans_pro"
			}
		]
	},
	"variables": {
		"paragraphSize": {
			"regular": [
				{
					"variable": {
						"paragraph-font-size": "0.75rem",
						"paragraph-line-height": "1"
					}
				},
				{
					"breakpoint": "tablet",
					"variable": {
						"paragraph-font-size": "0.875rem"
					}
				}
			],
			"small": [
				{
					"variable": {
						"paragraph-font-size": "0.6rem",
						"paragraph-line-height": "1"
					}
				},
				{
					"breakpoint": "tablet",
					"variable": {
						"paragraph-font-size": "0.6875rem"
					}
				}
			]
		},
		"paragraphColor": {
			"primary": [
				{
					"variable": {
						"paragraph-color": "var(--global-colors-primary)",
						"paragraph-link-color": "var(--global-colors-illusion)",
						"paragraph-link-color-hover": "var(--global-colors-minsk)"
					}
				}
			],
			"white": [
				{
					"variable": {
						"paragraph-color": "var(--global-colors-white)",
						"paragraph-link-color": "var(--global-colors-illusion)",
						"paragraph-link-color-hover": "var(--global-colors-seance)"
					}
				}
			],
			"grey": [
				{
					"variable": {
						"paragraph-color": "var(--global-colors-grey)",
						"paragraph-link-color": "var(--global-colors-illusion)",
						"paragraph-link-color-hover": "var(--global-colors-seance)"
					}
				}
			],
			"illusion": [
				{
					"variable": {
						"paragraph-color": "var(--global-colors-illusion)",
						"paragraph-link-color": "var(--global-colors-primary)",
						"paragraph-link-color-hover": "var(--global-colors-seance)"
					}
				}
			],
			"minsk": [
				{
					"variable": {
						"paragraph-color": "var(--global-colors-minsk)",
						"paragraph-link-color": "var(--global-colors-seance)",
						"paragraph-link-color-hover": "var(--global-colors-primary)"
					}
				}
			],
			"seance": [
				{
					"variable": {
						"paragraph-color": "var(--global-colors-seance)",
						"paragraph-link-color": "var(--global-colors-illusion)",
						"paragraph-link-color-hover": "var(--global-colors-grey)"
					}
				}
			]
		},
		"paragraphWeight": {
			"normal": [
				{
					"variable": {
						"paragraph-font-weight": "normal"
					}
				}
			],
			"bold": [
				{
					"variable": {
						"paragraph-font-weight": "bold"
					}
				}
			]
		},
		"paragraphFont": {
			"montserrat": [
				{
					"variable": {
						"paragraph-font-family": "var(--global-base-font)"
					}
				}
			],
			"source_sans_pro": [
				{
					"variable": {
						"paragraph-font-family": "var(--global-secondary-font)"
					}
				}
			]
		}
	}
}
